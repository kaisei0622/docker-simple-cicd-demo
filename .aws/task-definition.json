{
    "containerDefinitions": [
        {
            "name": "web",
            "image": "<image>",
            "cpu": 128,
            "memoryReservation": 512,
            "portMappings": [
                {
                    "containerPort": 80,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "environment": [],
            "mountPoints": [],
            "volumesFrom": [],
            "dependsOn": [
                {
                    "containerName": "api",
                    "condition": "HEALTHY"
                }
            ],
            "readonlyRootFilesystem": false
        },
        {
            "name": "api",
            "image": "<image>",
            "cpu": 128,
            "memoryReservation": 512,
            "portMappings": [
                {
                    "containerPort": 8080,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "environment": [],
            "mountPoints": [],
            "volumesFrom": [],
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                    "curl -f http://localhost:8080/api/hello || exit 1"
                ],
                "interval": 10,
                "timeout": 5,
                "retries": 5,
                "startPeriod": 10
            }
        }
    ],
    "family": "simple-cicd-def",
    "executionRoleArn": "arn:aws:iam::<account-id>:role/ecsTaskExecutionRole",
    "networkMode": "awsvpc",
    "cpu": "256",
    "memory": "1024",
    "requiresCompatibilities": [
        "FARGATE"
    ]
}